<%= form_for @post, url: {action: "create"}, html: {class: "create_post"} do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :location %>
  <%= f.text_area :text, size: "60x12" %>
  <%= f.submit "Create" %>
  <%= select_tag 'category_id', options_for_select(@categories.collect { |c| [ c.title, c.id]}) %>
<% end %>

